[
  {
    "id": "roads_track",
    "type": "line",
    "source": "osm",
    "source-layer": "transport_lines",
    "minzoom": 14,
    "maxzoom": 24,
    "filter": [
      "==",
      [
        "get",
        "type"
      ],
      "track"
    ],
    "layout": {
      "visibility": "none"
    },
    "paint": {
      "line-color": "#b3b3b3",
      "line-dasharray": [
        0.3,
        1
      ],
      "line-width": [
        "interpolate",
        [
          "exponential",
          1.5
        ],
        [
          "zoom"
        ],
        11,
        0.5,
        18,
        8
      ]
    }
  }
]