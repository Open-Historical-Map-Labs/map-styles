[
  {
    "id": "state_points_labels",
    "type": "symbol",
    "source": "osm",
    "source-layer": "place_points",
    "minzoom": 5,
    "maxzoom": 20,
    "filter": [
      "in",
      [
        "get",
        "type"
      ],
      [
        "literal",
        [
          "state",
          "territory"
        ]
      ]
    ],
    "layout": {
      "visibility": "visible",
      "text-field": [
        "to-string",
        [
          "get",
          "name"
        ]
      ],
      "text-font": [
        "BernerBasisschrift"
      ],
      "text-size": [
        "interpolate",
        [
          "linear"
        ],
        [
          "zoom"
        ],
        6,
        15,
        10,
        18
      ],
      "text-line-height": 0.8,
      "text-transform": "uppercase",
      "symbol-spacing": 25,
      "symbol-avoid-edges": true,
      "symbol-placement": "point",
      "text-letter-spacing": 0.1,
      "text-max-width": 7
    },
    "paint": {
      "text-color": "rgba(0, 0, 0, 1)",
      "text-halo-width": 12,
      "text-halo-blur": 2,
      "text-halo-color": "rgba(222, 115, 115, 1)"
    }
  }
]